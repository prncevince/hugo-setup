{
  "name": "hugo-setup",
  "version": "0.1.0",
  "description": "A Hugo setup using Lerna & Netlify CMS. This is a monorepo that builds/servers my website.",
  "private": true,
  "author": "Vincent Clemson",
  "license": "ISC",
  "homepage": "https://gitlab.com/prncevince/hugo-setup#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/prncevince/hugo-setup.git"
  },
  "bugs": {
    "url": "https://gitlab.com/prncevince/hugo-setup/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "commitiquette": "^1.0.9",
    "commitizen": "^4.2.2",
    "husky": "^4.3.6",
    "lerna": "^3.22.1"
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "commitiquette"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
