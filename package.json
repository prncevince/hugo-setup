{
  "name": "hugo-setup",
  "version": "0.1.0",
  "description": "A Hugo setup using Lerna & Netlify CMS. This is a monorepo that builds/servers my website.",
  "private": true,
  "author": "Vincent Clemson",
  "license": "ISC",
  "homepage": "https://gitlab.com/prncevince/hugo-setup#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/prncevince/hugo-setup.git"
  },
  "bugs": {
    "url": "https://gitlab.com/prncevince/hugo-setup/issues"
  },
  "main": "index.js",
  "config": {
    "commitizen": {
      "path": "commitiquette"
    }
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "scripts": {
    "chroma:nightowl": "./site/tools/nightowl.sh",
    "postinstall": "run-s setup:**",
    "setup:husky": "husky install",
    "setup:repo": "lerna bootstrap --hoist",
    "setup:hooks": "lerna exec --ignore hugo-site git config core.hooksPath ../../.husky",
    "setup:hooks:site": "lerna exec --scope hugo-site git config core.hooksPath ../.husky",
    "submodule": "run-s submodule:*",
    "submodule:remote": "git submodule add $npm_config_remote ./packages/$npm_config_app",
    "submodule:absorb": "git submodule absorbgitdirs packages/$npm_config_app",
    "submodule:hooks": "lerna exec --scope $npm_config_app git config core.hooksPath ../../.husky",
    "start": "run-p start:*",
    "start:noentry:cms": "run-p start:cms start:site start:webpack:nocms",
    "start:cms": "lerna exec netlify-cms-proxy-server --scope hugo-netlify-cms",
    "start:site": "hugo server -s site",
    "start:webpack": "webpack-dev-server --open --config webpack.dev.js",
    "start:webpack:nocms": "webpack-dev-server --open --config webpack.nocms.js",
    "preview": "run-p preview:*",
    "preview:cms": "npm run start:cms",
    "preview:site": "npm run start:site -- -DF",
    "preview:webpack": "npm run start:webpack",
    "build": "run-s build:webpack build:site",
    "build:site": "hugo -s site -d dist",
    "build:webpack": "webpack --config webpack.prod.js",
    "run:cms:build": "lerna run build --scope hugo-netlify-cms",
    "run:cms:start": "lerna run start --scope hugo-netlify-cms",
    "test": "echo \"Error: no test $npm_config_app specified\" && exit 0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@octokit/core": "^3.2.4",
    "assets-webpack-plugin": "^7.0.0",
    "babel-loader": "^8.2.2",
    "browserslist": "^4.16.3",
    "clean-webpack-plugin": "^3.0.0",
    "commitiquette": "^1.0.9",
    "commitizen": "^4.2.2",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "dotenv-webpack": "^6.0.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-webpack-plugin": "^2.4.1",
    "glob-all": "^3.2.1",
    "html-webpack-plugin": "^5.0.0-beta.6",
    "hugo-bin": "^0.68.0",
    "husky": "^5.0.6",
    "install": "^0.13.0",
    "lerna": "^3.22.1",
    "mini-css-extract-plugin": "^1.3.4",
    "netlify-cms-proxy-server": "^1.3.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-custom-media": "^8.0.0",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.0.0",
    "postcss-preset-env": "^6.7.0",
    "purgecss-webpack-plugin": "^4.0.0",
    "sass": "^1.32.7",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
